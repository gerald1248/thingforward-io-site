                <!-- Blog Categories Well -->
                <div class="well index-well">
                    <h4>Blog Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
        <% blog.tags.each do |tag, articles| %>
          <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
        <% end %>
                            </ul>
                        </div>
                        <!-- /.col-lg-6 -->
                    </div>
                    <!-- /.row -->
                </div>

                <!-- Side Widget Well -->
                <div class="well">
                    <h4>By Date</h4>
                    <div class="row">
                        <div class="col-lg-6">
			    <ul class="list-unstyled">
        <% blog.articles.group_by {|a| a.date.year }.each do |year, articles|
            articles.group_by { |b| b.date.month }.each do |month,articles2|
        %>
          <li><%= link_to "#{year}-#{month} (#{articles2.size})", blog_month_path(year,month) %></li>
        <% end
          end %>
                            </ul>
                        </div>
                        <!-- /.col-lg-6 -->
                    </div>
                    <!-- /.row -->
                </div>

